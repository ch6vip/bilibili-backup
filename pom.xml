                            <mainClass>${app.mainClass}</mainClass>
                            <displayName>${project.name}</displayName>
                            <name>${project.artifactId}-without-jre</name>
                            <bundleJre>false</bundleJre>
                            <jreMinVersion>8</jreMinVersion>
